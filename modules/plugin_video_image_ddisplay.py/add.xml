<addon id="plugin.video.npcportrait" version="1.0.0" name="NPC Portrait Display" provider-name="YourName">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Display an NPC portrait on screen</summary>
        <description>A simple Kodi add-on to display an NPC portrait full-screen.</description>
        <platform>all</platform>
    </extension>
</addon>
